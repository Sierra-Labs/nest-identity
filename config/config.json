{
  "http": {
    "port": "ENV:HTTP_PORT"
  },
  "jwt": {
    "secret": "my-secet",
    "expiresIn": "1y"
  },
  "api": {
    "basePath": "/api",
    "explorer": false
  },
  "aws": {
    "accessKeyId": "access-key-id",
    "secretAccessKey": "secret-access-key",
    "region": "us-west-2",
    "s3": {
      "bucket": "bucket",
      "bucketUrl": "https://s3-us-west-2.amazonaws.com/bucket"
    }
  },
  "cookie": {
    "secret": "supersecret"
  },
  "database": {
    "type": "postgres",
    "poolMax": 100
  },
  "email": {
    "from": "no-reply@example.com",
    "settings": {
      "pool": true,
      "host": "smtp.example.com",
      "port": 465,
      "secure": true,
      "auth": {
        "user": "username",
        "pass": "password"
      }
    },
    "clientBaseUrl": "http://localhost:4200",
    "forceEmbeddedImages": true,
    "templateDir": "/public/templates",
    "templateEngine": "PUG",
    "passwordRecovery": {
      "subject": "Reset your password",
      "path": "/password/reset",
      "template": "password-reset",
      "tokenExpiration": {
        "value": "1hr",
        "description": "one hour"
      }
    },
    "registration": {
      "subject": "Your account was registered.",
      "template": "register"
    }
  },
  "pagination": {
    "defaultPageSize": 100,
    "maxPageSize": 200
  },
  "password": {
    "rounds": 14
  },
  "client": {
    "aws": {
      "accessKeyId": "",
      "secretAccessKey": "",
      "region": "us-east-1",
      "bucket": ""
    }
  }
}
