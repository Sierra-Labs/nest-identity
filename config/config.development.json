{
  "http": {
    "port": 3000
  },
  "api": {
    "explorer": true,
    "explorerPath": "/explorer"
  },
  "aws": {
    "accessKeyId": "your-access-key-id",
    "secretAccessKey": "you-secret-access-key",
    "region": "us-west-2",
    "s3": {
      "bucket": "bucket",
      "bucketUrl": "https://s3-us-west-2.amazonaws.com/bucket"
    }
  },
  "email": {
    "from": "no-reply@yourdomain.com",
    "settings": {
      "SES": true
    },
    "clientBaseUrl": "http://localhost:4200",
    "forceEmbeddedImages": false,
    "templateDir": "/public/templates",
    "templateEngine": "PUG",
    "passwordRecovery": {
      "subject": "Reset your password",
      "path": "/password-recovery?dialog=reset",
      "template": "password-reset",
      "tokenExpiration": {
        "value": "1hr",
        "description": "one hour"
      }
    },
    "registration": {
      "subject": "Thank you for signing up",
      "template": "register"
    }
  }
}